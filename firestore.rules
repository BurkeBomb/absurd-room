rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function authed() {
      return request.auth != null;
    }

    match /rooms/{roomId} {
      allow read: if true;
      allow create: if authed();
      allow update: if authed();

      match /submissions/{submissionId} {
        allow read: if true;
        allow create: if authed();
        allow update, delete: if authed();
      }
    }
  }
}
